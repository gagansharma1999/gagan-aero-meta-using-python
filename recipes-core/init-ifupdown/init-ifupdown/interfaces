# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

# Wired interface
auto lo eth0
iface lo inet dhcp

# Wireless interface
auto wlan0
iface wlan0 inet static
	address 192.168.8.2
	netmask 255.255.255.0
	network 192.168.8.0

# Ethernet/RNDIS gadget (g_ether)
# ... or on host side, usbnet and random hwaddr
auto usb0
iface usb0 inet static
	address 192.168.7.2
	netmask 255.255.255.0
	network 192.168.7.0
